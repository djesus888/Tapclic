-<script>
import { formatDate as utilFormatDate } from '@/utils/formatDate'
import api from '@/axios'
import { useAuthStore } from '@/stores/authStore'
import { useSocketStore } from '@/stores/socketStore'
import ServiceDetailsModal from './ServiceDetailsModal.vue'
import RequestConfirmationModal from './RequestConfirmationModal.vue'
import ProviderContactModal from './ProviderContactModal.vue'
import PaymentModal from './PaymentModal.vue'
import ChatRoomModal from './ChatRoomModal.vue'
import NewTicketModal from './NewTicketModal.vue'
import LiveOrderTracking from './LiveOrderTracking.vue'
import PaymentPill from './PaymentPill.vue'

const STATUS_CONFIG = {
  completado: { label: 'Completado', color: 'text-green-600' },
  fallido: { label: 'Fallido', color: 'text-red-600' },
  inconcluso: { label: 'Inconcluso', color: 'text-yellow-600' },
  cancelado: { label: 'Cancelado', color: 'text-gray-500' }
}

export default {
  name: 'DashboardUser',
  components: {
    ServiceDetailsModal,
    RequestConfirmationModal,
    ProviderContactModal,
    PaymentModal,
    ChatRoomModal,
    NewTicketModal,
    LiveOrderTracking,
    PaymentPill
  },
  data() {
    return {
      services: [],
      loading: true,
      selectedTab: 'services',
      modalService: null,
      showServiceDetails: false,
      showRequestConfirmation: false,
      showProviderContact: false,
      showPayment: false,
      activeRequests: [],
      activeRequestsLoading: true,
      supportLoading: false,
      tickets: [],
      showNewTicket: false,
      faqLoading: false,
      faqItems: [],
      history: [],
      historyLoading: false,
      chatTarget: null,
      lastSpecDetails: '',
      showLiveTracking: false,
      liveOrder: null,
      historyModal: false,
      selectedHistory: {},
      _unsubscribeListeners: []
    }
  },
  computed: {
    notifications() {
      return useSocketStore().notifications
    },
    unreadNotifications() {
      return useSocketStore().unreadCount
    }
  },
  watch: {
    selectedTab(tab) {
      const tabActions = {
        services: () => this.fetchServices(),
        activeRequests: () => this.fetchActiveRequests(),
        support: () => {
          this.fetchTickets()
          this.fetchFaq()
        },
        history: () => this.fetchHistory()
      }
      tabActions[tab]?.()
    },
    notifications(newVal) {
      const lastNotification = newVal[0]
      if (lastNotification?.event === 'status_changed') {
        this.updateRequestStatus(lastNotification.request_id, lastNotification.status)
      }
    }
  },
  methods: {
    formatDate(date) {
      return utilFormatDate(date)
    },
    sanitize(str) {
      if (!str || typeof str !== 'string') return str
      const tempDiv = document.createElement('div')
      tempDiv.textContent = str
      return tempDiv.innerHTML
        .replace(/<script\b[^<]*(?:(?!<\/script>)<[^<]*)*<\/script>/gi, '')
        .replace(/on\w+="[^"]*"/g, '')
        .replace(/on\w+='[^']*'/g, '')
    },
    parsePaymentMethods(raw) {
      try {
        return typeof raw === 'string' ? JSON.parse(raw) : (raw || [])
      } catch (e) {
        console.warn('Error parseando payment_methods:', e)
        return []
      }
    },
    normalizeService(s) {
      const p = s.provider && typeof s.provider === 'object' ? s.provider : {}
      let paymentInfo = {}
      try {
        const methods = this.parsePaymentMethods(s.payment_methods)
        methods.forEach(m => {
          if (m.method_type === 'pago_movil') {
            paymentInfo.pagoMovil = {
              banco: m.bank_name,
              telefono: m.phone_number,
              cedula: m.id_number
            }
          }
          if (m.method_type === 'transferencia') {
            paymentInfo.transferencia = {
              banco: m.bank_name,
              cuenta: m.account_number,
              cedula: m.id_number
            }
          }
          if (m.method_type === 'paypal') {
            paymentInfo.paypal = { email: m.email }
          }
   if (m.method_type === 'zelle') {
            paymentInfo.zelle = { email: m.email }
          }
        })
      } catch (e) {
        console.warn('Error parsing payment methods', e)
      }

      return {
        ...s,
        providerName: p.name || '',
        providerAvatar: p.avatar || '/img/default-provider.png',
        providerRating: p.rating || 0,
        providerPhone: p.phone || '',
        providerAddress: p.address || '',
        paymentInfo
      }
    },
    tabClass(tab) {
      return [
        'px-4 py-2 rounded-md font-semibold',
        this.selectedTab === tab ? 'bg-blue-600 text-white' : 'text-gray-700 hover:bg-gray-200'
      ]
    },
    statusLabel(status) {
      return STATUS_CONFIG[status]?.label || status
    },
    statusColor(status) {
      return STATUS_CONFIG[status]?.color || 'text-gray-500'
    },
    openLiveTracking(request) {
      const serviceNormalized = this.normalizeService(request)
      this.liveOrder = {
        id: serviceNormalized.id,
        title: serviceNormalized.service_title,
        provider: {
          name: serviceNormalized.providerName,
          avatar: serviceNormalized.providerAvatar,
          rating: serviceNormalized.providerRating,
          phone: serviceNormalized.providerPhone,
          address: serviceNormalized.providerAddress
        },
        price: serviceNormalized.service_price,
        status: serviceNormalized.status
      }
      this.showLiveTracking = true
    },
    openServiceDetails(service) {
      this.modalService = this.normalizeService(service)
      this.showServiceDetails = true
    },
    openChat(target) {
      this.chatTarget = target
    },
    openPaymentModal(request) {
      this.modalService = request
      this.showPayment = true
    },
    resetFlow() {
      this.showProviderContact = false
      this.modalService = null
    },
    fetchServices() {
      this.loading = true
      api.get('/services').then(res => {
        this.services = res.data.map(s => this.normalizeService(s))
      }).finally(() => this.loading = false)
    },
    fetchActiveRequests() {
      this.activeRequestsLoading = true
      api.get('/active-requests').then(res => {
        this.activeRequests = res.data.map(r => this.normalizeService(r))
      }).finally(() => this.activeRequestsLoading = false)
    },
    fetchTickets() {
      this.supportLoading = true
      api.get('/support-tickets').then(res => this.tickets = res.data).finally(() => this.supportLoading = false)
    },
    fetchFaq() {
      this.faqLoading = true
      api.get('/faq').then(res => this.faqItems = res.data).finally(() => this.faqLoading = false)
    },
    fetchHistory() {
      this.historyLoading = true
      api.get('/history').then(res => this.history = res.data).finally(() => this.historyLoading = false)
    },
    onTicketCreated(ticket) {
      this.tickets.push(ticket)
      this.showNewTicket = false
    },
    openHistoryModal(item) {
      this.selectedHistory = item
      this.historyModal = true
    },
    closeHistoryModal() {
      this.historyModal = false
      this.selectedHistory = {}
    },
    updateRequestStatus(requestId, status) {
      const idx = this.activeRequests.findIndex(r => r.id === requestId)
      if (idx !== -1) this.activeRequests[idx].status = status
    }
  },
  mounted() {
    this.fetchServices()
    this.fetchActiveRequests()
    this.fetchTickets()
    this.fetchFaq()
    this.fetchHistory()
  }
}
</script>

